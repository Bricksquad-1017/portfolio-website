{
    // Automatically activate PlatformIO project when a text editor is changed
    "platformio-ide.activateProjectOnTextEditorChange": true,
    
    // Use the development version of PlatformIO Core
    "platformio-ide.useDevelopmentPIOCore": true,
    
    // Configuration for markdownlint
    "markdownlint.config": {
        "accessibility": true
    },
    
    // GitHub Copilot settings
    // Generated by Copilot
    "github.copilot.chat.experimental.codeGeneration.instructions": [], // Generated by Copilot
    "github.copilot.chat.experimental.generateTests.codeLens": false,
    "github.copilot.chat.experimental.inlineChatCompletionTrigger.enabled": false,
    "github.copilot.chat.experimental.startDebugging.enabled": false,
    "github.copilot.chat.experimental.temporalContext.enabled": false,
    "github.copilot.chat.localeOverride": "auto",
    "github.copilot.chat.runCommand.enabled": true,
    "github.copilot.chat.scopeSelection": false,
    "github.copilot.chat.terminalChatLocation": "chatView",
    "github.copilot.chat.useProjectTemplates": true,
    "github.copilot.chat.welcomeMessage": "first",
    "github.copilot.editor.enableCodeActions": true,
    "github.copilot.preferredAccount": "",
    "github.copilot.renameSuggestions.triggerAutomatically": true
}